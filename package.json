{
  "name": "package-skeleton",
  "version": "1.0.2",
  "description": "Skeleton of a simple NPM Package with Babel and CI already configured.",
  "license": "MIT",
  "repository": "amercier/npm-package-skeleton",
  "author": "Alex Mercier <pro.alexandre.mercier@gmail.com> (http://amercier.com)",
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "transpile": "rm -rf dist && babel src -d dist",
    "prepublish": "npm run transpile",
    "doc": "rm -rf esdoc && esdoc -c esdoc.json",
    "lint": "eslint .",
    "mocha": "mocha specs --recursive --compilers js:babel-register",
    "start": "export NODE_ENV=development; npm run mocha -- --watch --growl",
    "test": "export NODE_ENV=test; npm run lint && rm -rf coverage && nyc npm run mocha"
  },
  "main": "dist/lib/index.js",
  "keywords": [
    "package",
    "skeleton",
    "example",
    "node",
    "npm",
    "babel",
    "ci",
    "code",
    "codeclimate",
    "codecov",
    "coverage",
    "eslint",
    "gemnasium",
    "istanbul",
    "mocha"
  ],
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-core": "^6.8.0",
    "babel-plugin-__coverage__": "^0.111111.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.8.0",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.3.1",
    "codecov": "^1.0.1",
    "esdoc": "^0.4.7",
    "eslint": "^2.8.0",
    "eslint-config-airbnb-base": "^2.0.0",
    "eslint-plugin-import": "^1.5.0",
    "mocha": "^2.4.5",
    "nyc": "^6.4.0",
    "sinon": "^1.17.3"
  },
  "nyc": {
    "exclude": "**",
    "reporter": [
      "lcovonly",
      "html",
      "text"
    ]
  }
}
